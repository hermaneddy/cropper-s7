<%= form_for(@blog, :multipart => true) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this crop from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Brand" %><br>
    <%= f.select :title, options_for_select(["All Brands", "BOSS", "BOSS ORANGE", "BOSS GREEN", "HUGO"]) %>

  </div>
  <div class="field">
    <%= f.label "Project" %><br>
    <%= f.text_area :description %>

  </div>
  <div class="actions">
    <%= f.submit "Get croppings", :class => "btn btn-primary"  %>
  </div>
<% end %>
